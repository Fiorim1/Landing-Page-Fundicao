.card_box1 {
  width: 200px;
  height: 250px;
  border-radius: 20px;
  background-color: #333; /* Cor de fundo caso a imagem não carregue */
  position: relative;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.55);
  cursor: pointer;
  transition: all .3s;
  overflow: hidden; /* Garante que a imagem não ultrapasse os limites */
  display: flex;
  align-items: center;
  justify-content: center;
}

.card_box1:hover {
  transform: scale(0.9);
}

.card_box1 img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 'cover' mantém a proporção e preenche o card */
  border-radius: 20px;
}
